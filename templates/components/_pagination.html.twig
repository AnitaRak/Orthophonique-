{% if pageCount > 1 %}
	<nav aria-label="Page navigation">
		<ul class="pagination justify-content-center">
			{% if first is defined and current != first %}
				<li class="page-item">
					<a class="page-link" href="{{ path(route, query|merge({(pageParameterName): first})) }}" rel="prev">&laquo;</a>
				</li>
			{% endif %}

			{% if previous is defined %}
				<li class="page-item">
					<a class="page-link" href="{{ path(route, query|merge({(pageParameterName): previous})) }}" rel="prev">&lt;</a>
				</li>
			{% endif %}

			{% for page in pagesInRange %}
				{% if page != current %}
					<li class="page-item">
						<a class="page-link" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
					</li>
				{% else %}
					<li class="page-item active">
						<a class="page-link" href="#">{{ page }}
							<span class="sr-only">(current)</span>
						</a>
					</li>
				{% endif %}
			{% endfor %}

			{% if next is defined %}
				<li class="page-item">
					<a class="page-link" href="{{ path(route, query|merge({(pageParameterName): next})) }}" rel="next">&gt;</a>
				</li>
			{% endif %}

			{% if last is defined and current != last %}
				<li class="page-item">
					<a class="page-link" href="{{ path(route, query|merge({(pageParameterName): last})) }}" rel="next">&raquo;</a>
				</li>
			{% endif %}
		</ul>
	</nav>
{% endif %}
