<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">

		<title>
			{% block title %}Béocler
			{% endblock %}
		</title>

		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

		<!-- Feuilles de style -->

		{# BOOTSTRAP via le lien <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">#}

		<link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}"> {% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('css/_footer.css') }}">
			<link rel="stylesheet" href="{{ asset('css/_nav.css') }}">
			<link rel="stylesheet" href="{{ asset('css/main.css') }}">
			{{ encore_entry_link_tags('app') }}
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css">

		{% endblock %}


		<!-- Fichiers JS -->

		{# JS BOOTSTRAP via le lien   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
																																																																																																		#}
		<script src="{{ asset('js/bootstrap.bundle.js') }}"></script>
		<script src="{{ asset('js/jquery-3.7.1.min.js') }}"></script>

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}

		{% endblock %}

		<!-- responsive -->

		<meta name="viewport" content="width=device-width, initial-scale=1.0">
	</head>

	<body
		class="bg-light">
		<!-- nav bar -->
		{% block nav %}
			{% include "_partials/_nav.html.twig" %}


			<!--Conditions qui verifie que l'user est connecté est que sont compte n'a pas encore étais activé-->
			{% if app.user and app.user.isVerified == false %}
				<!--On va afficher une alerte-->
				<div class="alert alert-warning alert-dismissible" role="alert">
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

					<div class="alert-message">
						<strong>Votre compte n'est pas activé</strong>,<a href="{{ path('resend_verif') }}">renvoyer le lien d'activation</a>
					</div>
				</div>
			{% endif %}

			{% include "_partials/_flash.html.twig" %}
		{% endblock %}


		<!-- body -->
		{% block body %}{% endblock %}

		<!-- footer -->
		{% block footer %}
			{% include "_partials/_footer.html.twig" %}
		{% endblock %}

	</body>

</html>
