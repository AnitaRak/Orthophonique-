{% extends 'base.html.twig' %}

{% block title %}Béocler - Réinitialisation de mot de passe
{% endblock %}

{% block body %}
	<section class="main-container my-3">
		<div class="d-flex justify-content-center align-items-center">
            <div class="card col-md-4 my-5 shadow mb-3">

				<div class="card-header text-center">
					<h1 class="h3 mb-3 mt-3 font-weight-normal">Réinitialisation de mot de passe</h1>
				</div>

				<div class="text-center mt-3">
					<p>Saisissez votre nouveau mot de passe de votre compte</p>
				</div>

				<div class="mb-3 mx-3">

					<fieldset class="mb-3">
						{{ form_start(passForm) }}
						{{ form_row(passForm.password) }}
					</fieldset>

					<div class="text-center mt-3">
						<button type="submit" class="btn btn-lg btn-primary">Valider</button>
					</div>

					{{ form_end(passForm) }}

				</div>
			</div>
		</div>
	</section>
{% endblock %}
