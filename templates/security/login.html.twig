{% extends 'base.html.twig' %}

{% block title %}Béocler - Connexion
{% endblock %}

{% block body %}
	<section class="main-container my-3">
		<div class="d-flex justify-content-center align-items-center">
			<div class="card col-md-4 my-5 shadow mb-3">
				<form method="post">

					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}


					<div class="card-header text-center">
						<h1 class="h3 mb-3 mt-3 font-weight-normal">Se connecter</h1>
					</div>
					<div class="text-center mt-3">
						<p>Saisissez les identifiants de votre compte</p>
					</div>
					<div class="mx-3 ">
						<label for="inputEmail">Email</label>
						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
						<label for="inputPassword">Password</label>
						<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
					</div>


					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


					<div class="text-center mt-3">
						<button class="btn btn-lg btn-primary" type="submit">
							Se connecter
						</button>
					</div>

					<div class="text-center mt-3">
						<p>Vous n'avez pas encore de compte Béocler ?</p>
						<a href="{{ path('app_register') }}">Demander la création d'un compte</a>
					</div>

					<div class="text-center mt-3 mb-3">
						<a href="{{ path('forgotten_password') }}">Mot de passe oublié ?</a>
					</div>


				</form>

			</div>
		</div>
	</section>
{% endblock %}
